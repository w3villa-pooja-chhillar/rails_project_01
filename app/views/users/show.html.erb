
<h1 class="text-center mt-4"><%= @user.username.upcase%> 's profile</h1>
<% if logged_in? && @user == current_user %>
<div class ="text-center mt-4"><div class ="text-center mt-4">
<%= link_to "Edit your Profile", edit_user_path(@user),class: "btn btn-outline-info" %>
</div>
<% end %>
<h3 class = "text-center mt-4"> Articles </h3>
<%= render 'articles/article' %>
<div class = "flickr_pagination mb-4">
<%= will_paginate @articles %>
</div>

